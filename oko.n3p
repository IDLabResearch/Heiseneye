'http://josd.github.io/ns#pso_triple'([P,S,O],Triple) <=
    'http://josd.github.io/ns#builtin'(var(P),[]),
    'http://josd.github.io/ns#builtin'(!,[]),
    'http://josd.github.io/ns#pred'(P,[]),
    'http://josd.github.io/ns#builtin'(Triple =.. [P,S,O],[]).
'http://josd.github.io/ns#pso_triple'([P,S,O],Triple) <=
    'http://josd.github.io/ns#builtin'(Triple =.. [P,S,O],[]).
