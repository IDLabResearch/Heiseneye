#!/bin/bash
echo -n "" | tee answer.pl
for f in etc/*.pl
do
    echo "% running $f" | tee -a answer.pl
    scryer-prolog -g run,halt webeye.pl "$f" | tee -a answer.pl
    echo "" | tee -a answer.pl
done

echo -n "" | tee proof.pl
for f in etc/*.pl
do
    echo "% running $f" | tee -a proof.pl
    scryer-prolog -g proof_explanation,run,halt webeye.pl "$f" | tee -a proof.pl
    echo "" | tee -a proof.pl
done
