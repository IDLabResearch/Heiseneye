% Goal driven Parallel Sequences -- Jos De Roo
% See background paper https://arxiv.org/pdf/2010.12027.pdf

% find paths in the state space from initial state to goal state within limits
'josd.github.io/ns#findpath'(_SCOPE,[Goal,Path,Duration,Cost,Belief,Comfort,Limits]) <=
    'josd.github.io/ns#findpaths'([],[Goal,[],0.0,0.0,1.0,1.0,Path,Duration,Cost,Belief,Comfort,Limits]).

'josd.github.io/ns#findpaths'(_Maps,[Goal,Path,Duration,Cost,Belief,Comfort,Path,Duration,Cost,Belief,Comfort,_Limits]) <=
    'josd.github.io/ns#builtin'(call(Goal),[]),
    'josd.github.io/ns#builtin'(!,[]).
'josd.github.io/ns#findpaths'(Maps_s,[Goal,Path_s,Duration_s,Cost_s,Belief_s,Comfort_s,Path,Duration,Cost,Belief,Comfort,Limits]) <=
    'josd.github.io/ns#builtin'(Limits = [MaxDuration,MaxCost,MinBelief,MinComfort,MaxStagecount],[]),
    'josd.github.io/ns#builtin'(clause(
        'josd.github.io/ns#description'(Map,[From,Transition,To,Action,Duration_n,Cost_n,Belief_n,Comfort_n]),
        Where
    ),[]),
    'josd.github.io/ns#builtin'(call(From),[]),
    'josd.github.io/ns#builtin'(call(Where),[]),
    'josd.github.io/ns#description'(Map,[From,Transition,To,Action,Duration_n,Cost_n,Belief_n,Comfort_n]),
    'josd.github.io/ns#builtin'(append(Maps_s,[Map],Maps_t),[]),
    'josd.github.io/ns#stagecount'(Maps_t,Stagecount),
    'josd.github.io/ns#builtin'(Stagecount =< MaxStagecount,[]),
    'josd.github.io/ns#builtin'(Duration_t is Duration_s+Duration_n,[]),
    'josd.github.io/ns#builtin'(Duration_t =< MaxDuration,[]),
    'josd.github.io/ns#builtin'(Cost_t is Cost_s+Cost_n,[]),
    'josd.github.io/ns#builtin'(Cost_t =< MaxCost,[]),
    'josd.github.io/ns#builtin'(Belief_t is Belief_s*Belief_n,[]),
    'josd.github.io/ns#builtin'(Belief_t >= MinBelief,[]),
    'josd.github.io/ns#builtin'(Comfort_t is Comfort_s*Comfort_n,[]),
    'josd.github.io/ns#builtin'(Comfort_t >= MinComfort,[]),
    'josd.github.io/ns#builtin'(append(Path_s,[Action],Path_t),[]),
    'josd.github.io/ns#becomes'(From,To),
    'josd.github.io/ns#builtin'(call_cleanup(
        'josd.github.io/ns#findpaths'(Maps_t,[Goal,Path_t,Duration_t,Cost_t,Belief_t,Comfort_t,Path,Duration,Cost,Belief,Comfort,Limits]),
        'josd.github.io/ns#becomes'(To,From)
    ),[]).

% counting the number of stages (a stage is a sequence of steps in the same map)
'josd.github.io/ns#stagecount'([],1).
'josd.github.io/ns#stagecount'([C,E|_],B) <=
    'josd.github.io/ns#builtin'(C \= E,[]),
    'josd.github.io/ns#builtin'(!,[]),
    'josd.github.io/ns#stagecount'(_,G),
    'josd.github.io/ns#builtin'(B is G+1,[]).
'josd.github.io/ns#stagecount'([_|D],B) <=
    'josd.github.io/ns#stagecount'(D,B).

% linear implication
'josd.github.io/ns#becomes'(A,B) <=
    'josd.github.io/ns#builtin'(catch(A,_,fail),[]),
    'josd.github.io/ns#conj_list'(A,C),
    'josd.github.io/ns#builtin'(forall(
        'josd.github.io/ns#builtin'(member(D,C),[]),
        'josd.github.io/ns#builtin'(retract(D),[])
    ),[]),
    'josd.github.io/ns#conj_list'(B,E),
    'josd.github.io/ns#builtin'(forall(
        'josd.github.io/ns#builtin'(member(F,E),[]),
        'josd.github.io/ns#builtin'(assertz(F),[])
    ),[]).

'josd.github.io/ns#conj_list'(true,[]).
'josd.github.io/ns#conj_list'(A,[A]) <=
    'josd.github.io/ns#builtin'(A \= (_,_),[]),
    'josd.github.io/ns#builtin'(A \= false,[]),
    'josd.github.io/ns#builtin'(!,[]).
'josd.github.io/ns#conj_list'((A,B),[A|C]) <=
    'josd.github.io/ns#conj_list'(B,C).

